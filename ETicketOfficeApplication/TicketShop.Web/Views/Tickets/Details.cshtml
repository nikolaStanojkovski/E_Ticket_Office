<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-outline-info mx-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }

    <a class="btn btn-outline-info mx-2" asp-action="Index">Back to List</a>
</div>
