@using Microsoft.Extensions.Options
@model List<TicketShop.Domain.Domain.Order>

<h3 class="display-4 text-center my-4">Orders</h3>
<br />

<table class="table w-100">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Order #</th>
            <th scope="col">Number of Tickets</th>
            <th scope="col">Quantity of Tickets</th>
            <th scope="col">Date of purchase</th>
            <th scope="col" class="text-right">Total price (EUR)</th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Count != 0)
    {
        var totalOrdersPrice = 0.0;
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                var totalPrice = 0.0;
                var quantity = 0;

                foreach (var ticketInOrder in item.Tickets)
                {
                    totalPrice += ticketInOrder.Quantity * ticketInOrder.Ticket.Price;
                    quantity += ticketInOrder.Quantity;
                }

                totalOrdersPrice += totalPrice;

                var ticket = item.Tickets.First();
                var date = ticket.BoughtOn;

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.Tickets.Count</td>
                    <td>@quantity</td>
                    <td>@date</td>
                    <td class="text-right">@totalPrice €</td>
                    <td class="text-center">
                        <a asp-controller="Orders" asp-route-ticketId="@item.Id"
                           asp-action="GenerateInvoice" class="btn btn-outline-info">Invoice</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th scope="col">Total Price:</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col" class="text-right">@totalOrdersPrice EUR</th>
            </tr>
        </tfoot>
    }
</table>