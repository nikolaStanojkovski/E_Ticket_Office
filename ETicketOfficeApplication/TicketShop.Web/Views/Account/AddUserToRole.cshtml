@using Microsoft.AspNetCore.Identity
@using TicketShop.Domain.Identity

@inject SignInManager<EShopUser> SignInManager
@inject UserManager<EShopUser> UserManager

@model TicketShop.Domain.DTO.AddUserToRoleDTO

<h3 class="display-4 text-center my-4">Manage Users</h3>
<br />

<form asp-controller="Account" asp-action="AddUserToRole" method="post">

    <div class="form-group">
        <label>User Role</label>
        <select class="form-control" asp-for="Role" asp-items="@(new SelectList(Model.Roles))">
        </select>
    </div>

    <div class="form-group">
        <label>User</label>
        <select class="form-control" asp-for="UserMail" asp-items="@(new SelectList(Model.Users))">
        </select>
    </div>

    <div class="form-group mt-5">
        <input type="submit" value="Save" class="btn btn-primary btn-block" />
    </div>

</form>