@model TicketShop.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="container">
            <br />

            <h1 class="text-center display-4">Login page</h1>
            <br />
            <br />

            <div class="form-group col-12 mx-2">
                <div>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-12 mx-2">
                <div>
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <br />
            <div class="form-group col-12 mx-2">
                <button type="submit" class="btn btn-info btn-block" style="font-size: 25px;">Sign In</button>
            </div>

            <hr class="text-center text-info w-100 my-3" style="height: 5px;" />

            <div class="text-center form-group col-12 mx-2">
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success btn-block">Sign Up</a>
            </div>
        </div>
    </form>
</div>